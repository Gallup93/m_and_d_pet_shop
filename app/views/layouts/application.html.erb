<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <%= link_to "Back to Shelters", "/shelters" %>
      <%= link_to "Pets Index", "/pets" %>
      <%= link_to "Favorites: #{favorites.total_count}", "/favorites" %>
    </nav>
    <% flash.each do |type, message| %>
    <section class=<%= type %>>
      <p><%= message %></p>
    </section>
<% end %>
    <%= yield %>
  </body>
</html>
