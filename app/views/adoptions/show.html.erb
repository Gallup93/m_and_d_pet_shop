<h1>Application info for <%= @app.name %></h1>

<p>Address: <%= @app.address %></p>
<p>City: <%= @app.city %></p>
<p>Zip: <%= @app.zip %></p>
<p>State: <%= @app.state %></p>
<p>Phone Number: <%= @app.phone %></p>
<p>Description: <%= @app.description %></p>

<h3>Pets being applied for:</h3>
<% @app.pets.each do |pet| %>
  <section class="approvals-<%= pet.id %>">
  <p><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></p>
  <% if pet.adoption_status == true %>
    <p><%= link_to "Approve Adoption", "/pets/#{pet.id}/adoptions/#{@app.id}", method: :patch %></p>
  <% else %>
    <p><%= link_to "Revoke Adoption", "/adoptions/#{@app.id}/#{pet.id}", method: :patch %></p>
  <% end %>
  </section>
<% end %>
