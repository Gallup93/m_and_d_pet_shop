<h1><%= @pet.name %></h1>
<img style="width:40vw" src="<%= @pet.image %>">
<p>Age: <%= @pet.age %></p><br>
<p>Description: <%= @pet.description %></p><br>
<p>Sex: <%= @pet.sex %></p><br>
<p>Adoption Status: <%= @pet.adoptable? %></p>

<%= link_to 'Update Pet Info', "/pets/#{@pet.id}/edit" %><br>
<% if @pet.adoptable? == "Adoptable"%>
  <%= link_to 'Delete Pet', "/pets/#{@pet.id}", method: :delete %><br>
<% end %>
<% if favorites.favorite?(@pet.id) %>
<%= button_to "Remove from Favorites", "/favorites/#{@pet.id}", method: :delete %><br>
  <% else %>
<%= button_to "Add to your Favorites", "/favorites/#{@pet.id}", method: :patch %><br>
<% end %>
<p><%= link_to "See Current Applications", "/pets/#{@pet.id})/adoptions" %>
